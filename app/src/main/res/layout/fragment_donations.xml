<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DonationsFragment">

    <view
        android:id="@+id/cardShadowProgress"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="350dp"
        android:layout_height="360dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <view
        android:id="@+id/cardProgress"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/rounded_rectangle_white"
        app:layout_constraintEnd_toEndOf="@+id/cardShadowProgress"
        app:layout_constraintStart_toStartOf="@+id/cardShadowProgress"
        app:layout_constraintTop_toTopOf="@+id/cardShadowProgress" />

    <ProgressBar
        android:id="@+id/pbDonations"
        style="?android:attr/progressBarStyle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circular_progressbar"
        app:layout_constraintBottom_toBottomOf="@+id/cardProgress"
        app:layout_constraintEnd_toEndOf="@+id/cardProgress"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cardProgress"
        app:layout_constraintTop_toTopOf="@+id/cardProgress"
        app:layout_constraintVertical_bias="0.0"
        tools:progress="60" />

    <TextView
        android:id="@+id/txtDonationProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/pbDonations"
        app:layout_constraintEnd_toEndOf="@+id/pbDonations"
        app:layout_constraintStart_toStartOf="@+id/pbDonations"
        app:layout_constraintTop_toTopOf="@+id/pbDonations"
        tools:text="60%" />

    <TextView
        android:id="@+id/txtDonated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donated"
        app:layout_constraintBottom_toBottomOf="@+id/cardProgress"
        app:layout_constraintEnd_toEndOf="@+id/cardProgress"
        app:layout_constraintStart_toStartOf="@+id/cardProgress" />
</androidx.constraintlayout.widget.ConstraintLayout>