<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        android:id="@+id/view7"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toBottomOf="@+id/vCardOrderHistory"
        app:layout_constraintEnd_toEndOf="@+id/vCardOrderHistory"
        app:layout_constraintStart_toStartOf="@+id/vCardOrderHistory"
        app:layout_constraintTop_toBottomOf="@+id/cvOrderHistory" />

    <view
        android:id="@+id/vCardOrderHistory"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vCardNewOrder" />

    <view
        android:id="@+id/view6"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toBottomOf="@+id/vCardNewOrder"
        app:layout_constraintEnd_toEndOf="@+id/vCardNewOrder"
        app:layout_constraintStart_toStartOf="@+id/vCardNewOrder"
        app:layout_constraintTop_toBottomOf="@+id/cvNewOrder" />

    <TextView
        android:id="@+id/lblOrderHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_side_rounded_rectangle_gold"
        android:paddingTop="5dp"
        android:text="Order History"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vCardOrderHistory"
        app:layout_constraintEnd_toEndOf="@+id/vCardOrderHistory"
        app:layout_constraintStart_toStartOf="@+id/vCardOrderHistory"
        app:layout_constraintTop_toBottomOf="@+id/cvOrderHistory" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="@+id/vCardOrderHistory"
        app:layout_constraintEnd_toEndOf="@+id/vCardOrderHistory"
        app:layout_constraintStart_toStartOf="@+id/vCardOrderHistory"
        app:layout_constraintTop_toTopOf="@+id/vCardOrderHistory">

        <ImageView
            android:id="@+id/imgOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/neworders"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="201dp" />

    </androidx.cardview.widget.CardView>

    <view
        android:id="@+id/vCardNewOrder"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblNewOrder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_side_rounded_rectangle_gold"
        android:paddingTop="5dp"
        android:text="New Order"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vCardNewOrder"
        app:layout_constraintEnd_toEndOf="@+id/vCardNewOrder"
        app:layout_constraintStart_toStartOf="@+id/vCardNewOrder"
        app:layout_constraintTop_toBottomOf="@+id/cvNewOrder" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNewOrder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="@+id/vCardNewOrder"
        app:layout_constraintEnd_toEndOf="@+id/vCardNewOrder"
        app:layout_constraintStart_toStartOf="@+id/vCardNewOrder"
        app:layout_constraintTop_toTopOf="@+id/vCardNewOrder">

        <ImageView
            android:id="@+id/imgNewOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/neworders" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>