<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold"
    tools:context=".ui.UserFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#673AB7"
                android:text="Customers"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCusList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8F6FC8"
                android:text="Customer List"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCusInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8F6FC8"
                android:text="Insert Customer" />

            <Button
                android:id="@+id/btnCusUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8F6FC8"
                android:text="Update Customer"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#087E73"
                android:text="Staffs List"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStaffList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#51A8A0"
                android:text="Staff List"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnStaffInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#51A8A0"
                android:text="Insert Staff" />

            <Button
                android:id="@+id/btnStaffUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#51A8A0"
                android:text="Update Staff"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>